<?xml version="1.0" encoding="utf-8"?>
<com.gentleman.gui.round.GRoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.gentleman.gui.round.GRoundFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:gui_backgroundColor="@color/colorPrimaryDark"
        app:gui_radius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.gentleman.gui.round.GRoundButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Hello World!"
            app:gui_backgroundEndColor="@color/colorAccent"
            app:gui_backgroundStartColor="@color/colorPrimary"
            app:gui_borderColor="@color/colorAccent"
            app:gui_borderWidth="2dp"
            app:gui_gradient_orientation="left_right"
            app:gui_radius="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.gentleman.gui.round.GRoundFrameLayout>

</com.gentleman.gui.round.GRoundConstraintLayout>